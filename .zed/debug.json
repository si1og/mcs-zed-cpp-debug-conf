[
  {
    "label": "Debug project (LLDB)",
    "build": {
      "command": "sh",
      "args": [
        "-c",
        "cmake -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build"
      ],
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/build/main",
    "request": "launch",
    "adapter": "CodeLLDB"
  },
